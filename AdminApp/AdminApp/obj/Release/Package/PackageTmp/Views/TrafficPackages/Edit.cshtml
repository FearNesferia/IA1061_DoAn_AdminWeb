@model AdminApp.Models.TrafficPackageEditModel

@{
    ViewBag.Title = "Edit";
}
<!-- Breadcrumb -->
<div class="ecommerce-title">

    <div class="row">
        <div class="col s12 m9 l10">
            <!--h1>@@title</h1-->
            <nav>
                <ul class="left">
                    <li class="active">
                        <a href="/TrafficPackages/Index">Traffic Packages</a>
                    </li>
                    <li>
                        <a href="/Websites/Index">Websites</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

</div>
<!-- /Breadcrumb -->
@using (Html.BeginForm("Edit", "TrafficPackages", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.TrafficPackageId)
    <!-- General -->
    <div class="card">
        <div class="title">
            <h5>Edit Traffic Package</h5>
            <a class="minimize" href="#">
                <i class="mdi-navigation-expand-less"></i>
            </a>
        </div>
        <div class="content">
            <!-- Main Info -->
            <div class="card">
                <div class="title">
                    <h5>Main Info</h5>
                    <a class="minimize" href="#">
                        <i class="mdi-navigation-expand-less"></i>
                    </a>
                </div>
                <div class="content">

                    <div class="row no-margin-top">
                        <div class="col s12 l3" style="height: inherit">
                            <label for="url" class="setting-title">
                                @Html.LabelFor(model => model.WebsiteUrl)
                            </label>
                        </div>
                        <div class="col s12 l9">
                            <div class="input-field no-margin-top disabled">
                                @*<input id="url" type="text" placeholder="Url" value="@Html.ValueFor(model => model.Payload)">*@
                                @Html.DisplayFor(model => model.WebsiteUrl)
                            </div>
                        </div>
                    </div>
                    <div class="row no-margin-top">
                        <div class="col s12 l3">
                            <label for="path" class="setting-title">
                                @Html.LabelFor(model => model.Path)
                            </label>
                        </div>
                        <div class="col s12 l9">
                            <div class="input-field no-margin-top">
                                @*<input id="path" type="text" placeholder="@(Model.Website.Url + "/Input Path")" value="@Model.Path" name="product-meta-keywords">*@
                                @Html.DisplayFor(model => model.Path, new { @style = "min-height: 100px" })
                            </div>
                        </div>
                    </div>
                    <div class="row no-margin-top">
                        <div class="col s12 l3">
                            <label for="QueryString" class="setting-title">
                                @Html.LabelFor(model => model.QueryString)
                            </label>
                        </div>
                        <div class="col s12 l9">
                            <div class="input-field no-margin-top">
                                @*<textarea name="product-keywords" id="ecommerce-product-keywords" placeholder="Query String" class="materialize-textarea">@Model.Payload</textarea>*@
                                @Html.DisplayFor(model => model.QueryString, new { @style = "min-height: 100px" })
                            </div>
                        </div>
                    </div>
                    <div class="row no-margin-top">
                        <div class="col s12 l3">
                            <label for="payload" class="setting-title">
                                @Html.LabelFor(model => model.Payload)
                            </label>
                        </div>
                        <div class="col s12 l9">
                            <div class="input-field no-margin-top">
                                @*   <textarea name="product-keywords" id="ecommerce-product-keywords" placeholder="Payload" class="materialize-textarea">@Model.Payload</textarea>*@
                                @Html.TextAreaFor(model => model.Payload, new { @style = "min-height: 100px" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /Main Info -->
            <!-- Detail Info -->
            <div class="card">
                <div class="title">
                    <h5>Detail Info</h5>
                    <a class="minimize" href="#">
                        <i class="mdi-navigation-expand-less"></i>
                    </a>
                </div>
                <div class="content">
                    <div class="row no-margin-top" style="min-height:50px">
                        <div class="col s12 l3">
                            <label for="Is Attack" class="setting-title">
                                @Html.LabelFor(model => model.IsAttack)
                            </label>
                        </div>
                        <div class="col s12 l9">
                            <div class="input-field no-margin-top">
                                @Html.EditorFor(model => model.IsAttack, new { htmlAttributes = new {style = "opacity:1;visibility: visible" } })
                            </div>
                        </div>
                    </div>
                    <div class="row no-margin-top">
                        <div class="col s12 l3">
                            <label for="IsChecked" class="setting-title">
                                @Html.LabelFor(model => model.IsChecked)
                            </label>
                        </div>
                        <div class="col s12 l9">
                            <div class="input-field no-margin-top">
                                @Html.EditorFor(model => model.IsChecked, new { htmlAttributes = new { style = "opacity:1;visibility: visible" } })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /Detail Info -->
        </div>
    </div>
    <!-- /General -->
          <!-- Save and Cancel buttons -->
    <p class="right-align">
        <button class="btn" type="submit">Save</button>
        <a class="btn" href="/TrafficPackages/Index">Cancel</a>
    </p>
      <!-- /Save and Cancel buttons -->
}

